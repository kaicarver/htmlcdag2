{
  "manifest_version": 3,
  "name": "Time Inserter",
  "version": "1.0",
  "description": "Inserts the current time when typing ':t '",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
